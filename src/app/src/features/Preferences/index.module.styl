    }
  .errorBody{
    margin-top: 1rem;
    padding: 1rem;
    background-color: #e5e7eb;
    min-height: 387px;
    height: 387px !important;
    overflow-y: auto;
    overflow-x: hidden;

    .verticalTimeline{
      height: auto !important;
      padding: 0;
      &::before{
      min-height: 24rem;
      }
      h5{
        font-weight: 800;
      }
      .errorTag{
        font-weight: 800;
        font-size: 1.2rem;
      }
      .errorDate{
        float: right;
        font-size: 0.88rem;
        color: #898686;
      }
      .inbuiltDate{
        display: none !important;
      }
      .marginUpdate{
        margin: 1rem 0 !important;
        p{
          margin: .6em 0 0;
