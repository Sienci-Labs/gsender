.preferencesContainer {
  width: 1000px;
  height: 700px;
  display: flex;
  flex-grow: 1;
  border: solid 1px #aab0ba;
  label {
    margin: 0;
    font-size: 1.1rem;
  }
}

.preferencesContent {
  display: flex;
  flex-direction: row;
  overflow-y: hidden;
  flex-grow: 1;
}

.reconnect {
  margin-bottom: 10px;
}

.preferencesMenu {
  width: 20%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  background: #1F2937;
  font-size: 1.2rem;

  h3 {
    color: #3e85c7;
    font-size: 1.8rem;
    padding-left: 10px;
  }

  button {
    font-size: 1rem;
    border: none;
    width: 100%;
    margin: 0;
    background: none;
    color: white;
    text-align: left;
    padding: 17px 0 17px 10px;

    &:focus {
      outline: none;
    }

    &:hover {
      background: #374151;
    }
  }
}

.activeMenu {
  background: #374151 !important;
}

.general-area {
  width: 100%;
  display: flex;
  gap: 2rem;
  justify-content: space-between;
}

.preferencesOptions {
  width: 80%;
  background: #d1d5db;
  padding: 1rem;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

.tool-main {
  display: flex;
  flex-direction: col;
  justify-content: space-between;
  width: 100%;
}

.tool-wrapper {
  height: calc(100% - 20px);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 1rem;
}

.tool-listings {
  display: flex;
  flex-direction: column;
  width: 40%;
}

.add-tool-form {
  display: flex;
  flex-direction: column;
  width: 50%;
}

.tools {
  width: 100%;
  border-radius: 2px;
  background: white;
  overflow-y: scroll;
  height: 350px;

  .delete {
    font-size: 1rem;
    color: red;
    justify-content: center;
    align-items: center;
    border: none;
    outline: none;
    background: none;
  }
}

.tool {
  padding: 10px;
  display: flex;
  flex-direction: row;
  font-size: 1.15rem;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.tool-dimensions {
  width: 30%;
}

.tool + .tool {
  border-top: solid 1px #cccccc;
}

.add-tool {
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: .5rem;
  border-radius: .25rem;
  margin: 1rem 0;

  &:disabled {
    background: #6B7280;
  }
}

.sub-heading {
  color: #9b1919;
}

// animation from https://codepen.io/seansean11/pen/DgGYPY
.save-colour {
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: .5rem;
  border-radius: .25rem;
  margin: 1rem 0;
  box-shadow: 0 0 0 0 rgba(#5a99d4, .5);
  -webkit-animation: pulse 1.5s infinite;
}

.save-colour:disabled {
  color: #9ca3af;
  background-color: #D9DCE1;
  -webkit-animation: none;
}

.save-colour:hover {
  -webkit-animation: none;
}

@-webkit-keyframes pulse {
  0% {
  }
  70% {
    box-shadow: 0 0 0 15px rgba(#5a99d4, 0);
  }
    100% {
    box-shadow: 0 0 0 0 rgba(#5a99d4, 0);
  }
}

.choose-colour {
  width: 221px;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: .5rem;
  border-radius: .25rem;
  margin: .5rem 0 0;
}

.reset-colour {
  width: 221px;
  background: #df3b3b;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: .5rem;
  border-radius: .25rem;
  margin: .5rem 0 0;
}

.color-picker {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
}

.jog-speed-active {
  font-size: 1rem;
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: 7px;
  border-radius: .25rem;
  margin: 0;
}

.jog-speed-inactive {
  font-size: 1rem;
  width: 100%;
  background: #6B7280;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: 7px;
  border-radius: .25rem;
  margin: 0;
}

.disabled {
  pointer-events: none;
  opacity: .3;
  margin-bottom: 10px;
}

.input-spread {
  display: grid;
  grid-template-columns: 1fr 2fr;
  margin-bottom: 10px;
