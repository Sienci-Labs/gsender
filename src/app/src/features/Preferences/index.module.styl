  flex-direction: column;
  justify-content: space-between;
}

.keybindings-message {
  color: white;
  background-color: #3e85c7;
  font-size: 1rem;
  padding: 1rem;
  margin-top: 1.4rem;
}

.table-wrapper {
  background-color: white;
  height: 580px;
  overflow-y: scroll;
}

.settings-title {
  font-size: 1.8rem;
  margin: 20px 0 1rem;
}

.settings-subtitle {
  color: #3e85c7;
  font-size: 1.15rem;
  margin: 10px 0;
}

.settings-wrapper {
  width: 95%;
  margin: auto;
}

.machine-options-inputgroup {
  display: flex;
  align-items: center;
  margin-bottom: 1.4rem;
  width: 100%;

  label {
    font-size: 1.1rem;
  }
}

.machine-options-section {
  margin: auto;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
