.column {
  display flex;
  flex-direction column;
  gap: 0.5rem;
}

.row {
  display flex
  flex-direction row;
  justify-content space-between;
  gap: 0.2rem;
}

.switchRow {
  display flex
  flex-direction row;
  justify-content flex-end;
  gap: 0.2rem;
}

.inputRow {
  display: flex;
  flex-direction row;
  justify-content stretch;
}

.textInput {
  color: #0096cc;
  height: 33px;
  position: relative;
  text-align: left;
  outline: none;
  background-position: center right;
  background-repeat: no-repeat;
  caret-color: #0096cc;
