}

.textInput[type='number']:disabled {
  cursor: not-allowed;
}


.unit {
  display flex;
  align-items center;
  justify-content center;
  padding: 3px 14px;
  margin-left: -6px;
  font-size: 1rem;
  font-weight: normal;
  line-height: 1;
  color: #555;
  text-align: center;
  background-color: #eee;
  border-radius: 4px;
}
