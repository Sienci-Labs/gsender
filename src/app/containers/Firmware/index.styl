.category-tag {
  tag-mixin(color, background) {
    background-color: background;
    color: color;
    border: solid 1px color;
    border-radius: 5px;
    padding: 3px;
    font-size: 1rem;
  }

  &-GRBL {
    tag-mixin(#3e85c7, #9fc2e3)
  }

  &-Motors {
    tag-mixin(#036949, #06b881)
  }

  &-Limits {
    tag-mixin(#9b1919, #e66767)
  }

  &-Homing {
    tag-mixin(#975304, #f9a13b)
  }

  &-Pins {
    tag-mixin(#4b5563, #d1d5db)
  }

  &-Spindle {
    tag-mixin(#13283c, #d8e7f4)
  }

  &-Network {
    tag-mixin(#9AE8EC, #155B5F)
  }

  &-PID {
    tag-mixin(#F58787, #8B2323)
  }

  &-NetInterface {
    tag-mixin(#3473F1, #D0DCF3)
  }
}

