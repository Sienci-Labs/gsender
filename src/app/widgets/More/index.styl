.widget-content {
    position: relative;
    padding: 0 !important;
    display: grid;
    grid-template-rows: 5fr 1fr;

    &.hidden {
        display: none;
    }
}

.btn-link {
    color: #222;
    padding-left: 0;
    padding-right: 0;
    box-shadow: none;

    &:hover,
    &:focus {
        text-decoration: none;
    }
}

.macro-variables-dropdown {
    max-height: 180px;
    overflow-y: auto;
}

.table-container {
    min-height: 80px;
    max-height: 180px;
    overflow-x: auto;
    overflow-y: scroll;
}

.table {
    width: 100%;
    max-width: 100%;

    th {
        font-weight: normal;
    }

    > thead > tr > th,
    > tbody > tr > td,
    > tfoot > tr > td {
        padding: 4px 8px;
    }

    > thead > tr {
        background-color: #eee;
    }

    > thead > tr > th,
    > tbody > tr > td {
        border-top: 1px solid #ddd;
        border-bottom: 1px solid #ddd;

        &:first-child {
            border-left-width: 0;
        }
        &:last-child {
            border-right-width: 0;
        }
    }

    > thead > tr:first-child > th {
        border-top-width: 0;
    }

    > tbody > tr:first-child > td {
        border-top-width: 0;
    }
    > tbody > tr:nth-child(1n+3) > td {
        border-bottom-width: 0;
    }

    .empty-result {
        padding: 20px 30px;
        text-align: center;
    }
}

.table-bordered {
    border: 1px solid #ddd;
}

.macro-item-control {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    outline: none;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    & > div {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 0rem 1rem;
    }
}

.macro-item-control-disabled {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    outline: none;
    color: grey;

    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    & > div {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 0rem 1rem;
    }
}

.macro-item-options {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-left: 1px solid rgba(grey, 0.5);
    cursor: pointer;
    outline: none;
    width: 40px;
}

.macro-control-area {
    display: flex;
    gap: 1rem;
}

.add-macro-button {
    position: absolute;
    right: 35px;
    bottom: 15px;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #3e85c7;
    border: 0;
    color: white;
    font-size: 12px;
    display: flex;
    justify-content center;
    align-items center;
}

.macro-container {
    display: grid;
    gap: 5px;
    padding: 5px;
}

.macro-menu-item {
    display: grid;
    grid-template-columns: 1fr 2fr;
    padding: 5px;
    font-size: 14px;
    // column-gap: 10px;
    align-items: center;
    outline: none;

    &:hover {
        background-color: rgba(#059669, 0.5);
        border-radius: 5px;
    }
}

.empty-result {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.height-override {
    height: 100% !important;
}

@keyframes glowEffect {
    from  {
        primary = #059669;
        background: primary;
        border-bottom: 2px solid primary;
    }

    to {
        secondary = #0ad193;
        background: secondary;
        border-bottom: 2px solid secondary;
    }
}

.glowing-background {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    animation: glowEffect 0.8s ease-in-out infinite alternate;
    color: white;
}

.dropdown {
    background-color: white;
    padding: 4px 6px;
    border: 1px solid #3e85c7;
    border-radius: 3px;
}

.dropdown-item {
    display: block;
    padding: 0.5rem 1.5rem;
}

.macro-commands {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.action-area {
    display: grid;
    column-gap: 1rem;
    grid-template-columns: 1fr 1fr 1fr;
    padding: 0.75rem;
}

.macro-item {
  height: 40px;
  font-size: 13px;
  border-radius: 5px;  
  display: grid;
  grid-template-columns: 5fr 1fr;
  justify-content: center;
  align-items: center;
  border: 1px solid #9ca3af;
  background-color: #e5e7eb;
  width: 100%;
  padding: 0;
  cursor: pointer;
  text-align: center;

  div {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: 350ms ease-in-out;
  }

  i {
    align-self: center;
  }

  span {
    color: lightgrey;
  }
}