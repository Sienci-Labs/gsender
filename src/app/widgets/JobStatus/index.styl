.job-status-wrapper {
    display: flex;
    flex-direction row;
    flex-grow: 1;
    align-items: center;
    width: 100%;
    height: 9rem;
}

.litetoggle {
    transform: scale(.8);
}

.processing-loader {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    align-items: center;
    font-size: 1.2rem;
    background:  #e5e7eb;
    border: solid 1px #9CA3AF;
    font-weight: bold;
}

.loading-bar {
    display: inline-block;
    position: relative;
    width: 80px;
    height: 80px;
}
.loading-bar div {
    position: absolute;
    top: 33px;
    width: 13px;
    height: 13px;
    border-radius: 50%;
    background: #3e85c7;
    animation-timing-function: cubic-bezier(0, 1, 1, 0);
}
.loading-bar div:nth-child(1) {
    left: 8px;
    animation: lds-ellipsis1 0.6s infinite;
}
.loading-bar div:nth-child(2) {
    left: 8px;
    animation: lds-ellipsis2 0.6s infinite;
}
.loading-bar div:nth-child(3) {
    left: 32px;
    animation: lds-ellipsis2 0.6s infinite;
}
.loading-bar div:nth-child(4) {
    left: 56px;
    animation: lds-ellipsis3 0.6s infinite;
}
@keyframes lds-ellipsis1 {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}
@keyframes lds-ellipsis3 {
    0% {
        transform: scale(1);
    }
    100% {
        transform: scale(0);
    }
}
@keyframes lds-ellipsis2 {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(24px, 0);
    }
}

.file {
    wrapping() {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    &-info {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        width: 100%
    }

    &-name {
        wrapping();
        width: 100%;
        display: flex;
        & div {
            wrapping();
            width: min-content;
        }
    }

    &-text {
        color: #3e85c7;
        font-size: 1.1rem;
        height: 1.75rem;
    }

    &-path {
        width: 100%;
        max-width: 32vw;
    }

    &-path, &-path div {
        wrapping();
    }
}