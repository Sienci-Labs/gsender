.NavbarConnection {
  display: flex;
  flex-direction: row;
  position: relative;
  background: #111827;
  color: white;
  border-radius: 0.25rem;
  justify-content: space-between;
  align-items: center;
  padding: 0.25rem 1rem;
  min-width: 312px;
  min-height: 50px;
  box-shadow: rgba(255, 255, 255, 0.2) 0px 0px 0px 1px inset, rgba(0, 0, 0, 0.9) 0px 0px 0px 1px;
}

.NavbarConnectionIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4B5563;
  height: 2.5rem;
  width: 2.5rem;

  border-radius: 9999px;
  margin-right: 0.5rem;

  i {
    font-size: 1.4rem !important;
  }
}

.PortListing {
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #060d14;
  font-family: $font-family-monospace;
  padding: 1rem 0.5rem;
  width: 100%;
  margin: 0;
  border: 0;
  --tw-bg-opacity: 0.8;
  transition: background 250ms ease-in-out;

  &:hover {
    background: #193550;
  }

  i {
    font-size: 1.2rem;
  }
}


.NavbarConnectionDropdownList {
  background: #060d14;
  display: none;
  left: 0;
  min-width: 250px;
  position: absolute;
  top: 47px;
  width: 100%
  z-index: 10;

  h5 {
    padding: 0 0.5rem;
    color: #CCCCCC;
    font-size: 1rem;
    border-bottom: solid 1px #4B5563;
  }
}

.NavbarConnection:hover .NavbarConnectionDropdownList{
  display: block;
}

.NavbarPortListingInfo {
  display: flex;
  flex-direction: column;
}

.NavbarPortListingPortLabel {
  text-align: right;
}

.NavbarPortListingPortManufacturer {
  font-family: $font-family-arial;
  font-size: 0.8rem;
  text-align: right;
  color: white;
}

.icon-connecting {
  animation: spin 1s linear infinite;
  background: rgba(217, 119, 6, 1);
  border-radius: 16px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(217, 119, 6, 0.3);
}

.icon-disconnected {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  background: rgba(0, 123, 255, 0.2);
  border: 1px solid rgba(0, 123, 255, 0.3);
}

.icon-connected {
  background: rgba(5, 150, 105, 1);
  border-radius: 16px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(5, 150, 105, 0.3);
}

.icon-error {
  background: rgba(239, 68, 68, 1);
  border-radius: 16px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.refreshButton {
  width: 100%;
  border: none;
  margin: 0;
  padding: 5px;
  background: #3E85C7;
  box-sizing: border-box;
  border-top: solid 1px gray;

  i {
    margin-right: 5px;
  }
}

.disconnectButton {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: none;
  margin: 0;
  border-radius: .25rem;
  background: #DC2626;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  opacity: 0;
  i {
    margin-right: 5px;
  }
  &:hover {
    opacity: 100;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: .5;
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


  .ConnectionInfo {
    font-size: 1rem;
    color: #6B7280;
    line-height: 1.2;
    text-align: right;
  }

.portLabel {
  color: white;
}

.noDevicesWarning {
  background: #374151;
  font-weight: bold;
  text-align: center;
  padding: 1rem 0;
 }


.other-devices {
  $bgColor = #000000;
  padding: 0.5rem;
  color: #CCCCCC;
  font-size: 1rem;
  border: none;
  outline: none;
  width: 100%;
  border-top: solid 1px #111827;
  display: flex;
  align-items: center;
  background: $bgColor;
  justify-content: space-between;
  transition: background 250ms ease-in-out;

  i {
    font-size: 1.25rem;
  }

  &:hover {
    background: lighten($bgColor, 25);
  }
}

.NavbarConnectionMobile {
  display: flex;
  flex-direction: row;
  position: relative;
  border: solid 1px #374151;
  background: #111827;
  color: white;
  border-radius: 0.25rem;
  justify-content: space-between;
  align-items: center;
  padding: 0.25rem 1rem;
  width: 100%;
  min-height: 50px;
}

@media (max-width: 639px), (max-device-width: 639px) {
  .NavbarConnection{
    margin: auto;
  }
}

.statusWrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 2.7rem;
  width: 2.7rem;
  border-radius: 5px;
  i {
    font-size: 1.4rem !important;
  }
}


.firmwareSelector {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 5px 0 0 0;
  align-items center
  justify-content center;
}

.selectorWrapper {
  border-radius: 5px;
  border: solid 1px #3E85C7;
}

.selectorButton {
  background: #111827;
  color: #3E85C7;
  border: none;
  outline: none;
  border-radius: 5px;
  padding: 5px;
}

.selected {
  background: rgba(0, 123, 255, 0.2);
  border: 1px solid rgba(0, 123, 255, 0.3);
  color: #FFFFFF;
}
