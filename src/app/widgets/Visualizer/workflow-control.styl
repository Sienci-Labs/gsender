.pulse {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(.90);
    box-shadow: 0 0 0 0 rgba(133, 241, 148, .7);
  }

  70% {
    transform: scale(1);
    box-shadow: 0 0 0 15px rgba(133, 241, 148, 0);
  }

  100% {
    transform: scale(.90);
    box-shadow: 0 0 0 0 rgba(133, 241, 148, 0);
  }
}
