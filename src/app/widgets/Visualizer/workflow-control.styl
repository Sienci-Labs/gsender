.workflow-button {
    btn-mixin($color) {
        @extend .workflow-btn;
        background-color: rgba($color, .8);
        --tw-shadow: 0 10px 15px -3px rgba(0, 0, 0, .1), 0 4px 6px -2px rgba(0, 0, 0, .05);
        box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
        transition: 150ms ease-in-out;

        &:disabled {
            $disabled-color = rgba($color, .5);
            background-color: $disabled-color;
            color: rgba(black, .2);
        }

        &:not(:disabled):hover {
            background-color: darken($color, 30%);
            transition: 150ms ease-in-out;
        }
    }

    &-split-top {
        right: 132px;
        bottom: 0;
        padding: 4px;
        color: white;
        position: absolute;
        border-top-right-radius: 4px;
        margin: 4px;
        border: 1px solid #fff;
        background-color: rgba(62, 133, 199, .8);
        z-index: 1;
    }

    @media (min-width: 1296px) {
        &-split-top {
            left: 132px;
            top: -3px;
        }
    }

    &-split-bottom {
        left: 132px;
        top: 26px;
        padding: 4px;
        border-bottom-right-radius: 1px;
        color: white;
        position: absolute;
        margin: 4px;
        border: 1px solid #fff;
        background-color: rgba(62, 133, 199, .8);
        z-index: 1;
    }

    @media (min-width: 1050px) {
        &-split-bottom {
            left: 121px;
            top: 24px;
        }
    }

    @media (min-width: 1168px) {
        &-split-bottom {
            left: 121px;
            top: 24px;
        }
    }

    @media (min-width: 1296px) {
        &-split-bottom {
            left: 132px;
            top: 26px;
        }
    }

    &-disabled {
        display: none;
    }

    &-upload {
        $color = #3e85c7;
        btn-mixin($color);
    }

     &-test {
        $color = #5191cc;
        btn-mixin($color);
        padding: 0.3rem 1rem !important;
        min-width: 0 !important;
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        justify-content: center;
        gap: 0.3rem;

         i {
             margin: 0 !important;
             padding: 0 !important;
         }

    }

    &-play {
        $color = #059669;
        btn-mixin($color);
    }

    &-pause {
        $color = #D97706;
        btn-mixin($color);
    }

    &-stop {
        $color = #dc2626;
        btn-mixin($color);
    }
}


