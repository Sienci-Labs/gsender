@import "display-panel";
@import "rotate";
@import "LocationPanel";
@import "../../styles/variables";

.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.alwaysAvailable{
    display: flex;
    width: 100%;
}

.hideHoming {
    display: none;
}

.row-space {
    margin-bottom: 5px;

    &:last-child {
        margin-bottom: 0;
    }
}
.col-space {
    margin-right: 5px;
}
.position-label {
    display: inline;
    border: 1px solid #9CA3AF;
    padding: 4px;
    margin-left: 5px;
    font-size: 0.8rem;

    &:hover {
        background-color: rgba(0, 0, 0, .05);
    }
}

.movement {
    background: #3e85c7;
    color: #FFFFFF;
}


.axes-position-label {
    font-family: $font-family-monospace;
}

.control-buttons {
    @media (max-width: 639px), (max-device-width: 639px) {
        max-width: 33%;
    }
    padding: 0 2rem
    display: flex;
    flex-grow 1;
    flex-direction column;
    padding: 0 1rem;
    button {
        margin-bottom: 10px;
    }
}

.displaypanelTable{
     @media (max-width: 639px), (max-device-width: 639px) {
        width: 50%;
    }
}

.display-panel {
    height: 100%;
    width: 100%;

}
.location-wrapper {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: space-around;
    @media (max-width: 639px), (max-device-width: 639px) {
        display: block;
    }
}
.machine-position {
    width: 15ch;
    align-items center;
}

.end-stop {
    width: 30%;
    display: flex;
    flex-direction: column;
    height: max-content;
    margin: auto;
}

.homeWrapper {
    align-self: center;
    justify-self: center;
    margin-bottom: 5px;
}

.homeIcon {
    font-size: 1.5em !important;
}

.end-stop-active-controls {
    display: grid;
    grid-template-columns: repeat(3,minmax(0,1fr));
    height: max-content;
    margin: auto;
    @media (max-width: 639px), (max-device-width: 639px) {
        margin-top: 1rem;
        width: 50%;
        height: 40%
    }
}

.quickPositionButton {
    background: #3e85c7;
    color: #FFFFFF;
    border: none;
    i {
        text-align left;
    }
    &:active {
        outline: none;
    }
    &:hover:enabled {
        background: #5191cc
    }

    &:disabled {
        background: rgb(204, 204, 204);
        color: #9ca3af;
    }
}

.runHomeButton {
    grid-row: 1;
    grid-column: 1/4;
    line-height: 1px;
    height: fit-content;
    padding: 8px
    margin-top: 0;
}

.QPBR {
    clip-path: polygon(0% 0%, 0% 45%, 55% 46%, 55% 100%, 100% 100%, 100% 0%);
    grid-row: 2;
    grid-column: 2/3;
    width: 130%;
    margin-left: 70%;
	height: 0;
	padding: 0;
	padding-top: 130%;
	margin: 30% 0 0 70%;

    i {
        transform: translateX(5%) rotate(45deg);
        width: 300%;
        text-align: left;
        @media (max-width: 639px), (max-device-width: 639px) {
            width: 277%;
            transform: translateX(9%) rotate(45deg);
            font-size: 1.4rem !important;
        }
    }
}
.QPBL {
    clip-path: polygon(0 0,100% 0,100% 45%,45% 45%,45% 100%,0 100%);
    grid-row: 2;
    grid-column: 1/2;
    width: 130%;
    height: 0;
	padding: 0;
	padding-top: 130%;
	margin-top: 30%;


    i {
         transform: translateX(-72%) rotate(-45deg);
        width: 300%;
        text-align: right;
        @media (max-width: 639px), (max-device-width: 639px) {
            width: 271%;
            transform: translateX(-73%) rotate(-45deg);
            font-size: 1.4rem !important;
        }
    }
}
.QPFR {
    clip-path: polygon(100% 100%, 100% 0%, 55% 0%, 55% 55%, 0% 55%, 0% 100%);
    grid-row: 3;
    grid-column: 2/3;
    width: 130%;

    margin: 30% 0 0 70%;
	height: 0;
	padding: 0;
	padding-top: 130%;

    i {
        transform: rotate(135deg);
        font-size: 1.7rem;
        bottom: -1.45rem;
        position: relative;
        bottom: 8px;
		display: block;
        @media (max-width: 639px), (max-device-width: 639px) {
            width: 97%;
            transform: translateX(1%) rotate(135deg);
            font-size: 1.4rem !important;
        }
    }
}
.QPFL {
    clip-path: polygon(0% 100%, 100% 100%, 100% 55%, 45% 55%, 45% 0%, 0% 0%);
    grid-row: 3;
    grid-column: 1/2;
    margin-top: 30%;
    width: 130%;

    height: 0;
	padding: 0;
	padding-top: 130%;

    i {
        transform: rotate(225deg);
        font-size: 1.7rem;
        bottom: -1.45rem;
        position: relative;
        bottom: 8px;
		display: block;
		text-align: right;
        @media (max-width: 639px), (max-device-width: 639px) {
            width: 99%;
            transform: translate(3%) rotate(225deg)
            font-size: 1.4rem !important;
        }

    }
}


