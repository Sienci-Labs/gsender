PRIMARY_COLOR = #3e85c7
SECONDARY_COLOR = #6B7280
PRIMARY_LIGHT = #78aad8;

.tab {
  color: SECONDARY_COLOR;
  flex-direction: row;
  font-size: 1.15rem;
  background: none;
  border: none;
  padding: 0 0.6rem;
  border-bottom: solid 4px #D1D5DB;
  transition: ease-in-out 250ms;
  width: 100%;
  &:hover {
    color :#4B5563;
  }
  &:focus{
    outline: none;
  }
  &:disabled {
    color: rgba(0, 0, 0, 0.5);
    border-bottom: none;
    cursor: not-allowed;
  }
}

.tab-active {
  color: PRIMARY_COLOR;
  border-bottom solid 4px PRIMARY_COLOR;
  &:hover {
    color: PRIMARY_LIGHT;
    border-bottom-color: PRIMARY_LIGHT;
  }
}

.tabRow {
  display: flex;
  height: 1.9rem;
  justify-content: space-between;

  &:before, &:after {
    content: none !important;
  }
}

.not-active {
  display: none;
}

.tabChild {
  height: 100%;
}

.tab-content {
  height: calc(100% - 1.9rem);
}
